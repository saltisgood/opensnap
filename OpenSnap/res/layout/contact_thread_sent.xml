<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true" >
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/msgbox_other"
        android:contentDescription="@string/snap_thread_sent_desc" />
    	<!-- android:background="@drawable/round_rect_bubbleblue" android:background="@drawable/bubbleblue" -->
    
    <org.holoeverywhere.widget.TextView
        android:id="@+id/sent_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/imageView1" />

</RelativeLayout>
